
.audience_content {
	margin:32rpx 10rpx 0 30rpx;
	background-color: #fff;
	display: flex;
}

.audience_content>image {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
}

.audience_content>view {
	margin-left: 24rpx;
	color:#333333;
	font-size: 28rpx;
	width: 628rpx;
}

.comment_name {
	font-size: 22rpx;
	margin-right: 14rpx;
}

.sign {
	font-size: 18rpx;
	display: inline-block;
	width: 28rpx;
	height: 26rpx;
	text-align: center;
	line-height: 26rpx;
	color:#44aef6;
	border: 1px solid #44aef6;
}

.comment_star {
	margin: 10rpx 0 26rpx;
	width: 100rpx;
	height: 20rpx;
	background-image: url("/img/star.png");
	background-size: 20rpx;
	background-repeat: repeat-x;
}

.comment_text {
	width: 570rpx;
}

.comment_footer {
	display: flex;
	justify-content: space-between;
	font-size: 18rpx;
	color:#999;
	margin-top: 32rpx;
	padding-right: 30rpx;
	padding-bottom: 20rpx;
	border-bottom: 1px solid #d8d8d8;
}

.comment_footer > view {
	display: flex;
	align-items: center;
}
.comment_footer > view image {
	width: 26rpx;
	height: 26rpx;
}

.comment_more {
	font-size: 28rpx;
	color: #ef4238;
	padding-top: 28rpx;
	margin-bottom: 28rpx;
	text-align: center;
	border-top: 1px solid #d8d8d8;
}
