/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  padding: 25rpx;
  margin-top: 200px;
  border: 1px solid #48C23D;
  border-radius: 5px;
  color: #48C23D;
  transition:all .1;
  line-height: 50rpx;
}
.usermottoHover{
  color: #ffffff;
  background-color: #48C23D;
}